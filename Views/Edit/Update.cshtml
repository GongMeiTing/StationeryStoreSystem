@model StationeryStoreSystem.Models.Order
@{
    ViewBag.Title = "Update";
}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
<h1 class="text-center">Staionery Order System</h1>
<h3>Update Orders</h3>
@using (Html.BeginForm())
{
    <div class="container">
            <div class="row">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Attributes</th>
                            <th scope="col">Value</th>

                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">UserID</th>
                            <td>@Html.DisplayFor(m => m.OrderID, new { @class = "form-control" ,@id="orderid"})</td>
                            @Html.HiddenFor(m => m.OrderID, new { @class = "form-control" })
                        </tr>

                        <tr>
                            <th scope="row">ItemName</th>
                            <td>@Html.TextBoxFor(m => m.ItemName, new { @class = "form-control" ,@id="itemname"})</td>
                        </tr>
                        <tr>
                            <th scope="row">Quantity</th>
                            <td>@Html.TextBoxFor(m => m.Quantity, new { @class = "form-control",@id="quantity" })</td>
                        </tr>
                        <tr>
                            <th scope="row">PricePerItem</th>
                            <td>@Html.TextBoxFor(m => m.PricePerItem, new { @class = "form-control" ,@id="price"})</td>
                        </tr>
                        <tr>
                            <th scope="row">TotalPrice</th>
                            <td>@Html.DisplayFor(m => m.TotalPrice, new { @class = "form-control" ,@id="totalprice"})</td>
                            @Html.HiddenFor(m => m.TotalPrice, new { @class = "form-control" })
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="row"><button type="submit" class="btn btn-primary">Update</button></div>
        <div class="row"><button id="btnUpdate" class="btn btn-primary">Update Api</button> </div>
    </div>
}
<script type="text/javascript">

    $("#btn1Update").click(function () {


        var changed = {
        
            "OrderID": "21212",
            "ItemName": $("#itemname").val(),
            "PricePerItem": $("#price").val(),
            "Quantity": $("#quantity").val(),
            "TotalPrice": $("#totalprice").val(),

        };

        $.ajax({
            type: "POST",
            url: 'http://localhost:55976/api/Test/update/{changed}',
            data: JSON.stringify(changed),

            contentType: "application/json;charset=utf-8",
            processData: true,
            success: function (data, status, xhr) {
                alert("The result is : " + status);
            },
            error: function (xhr) {
                alert(xhr.responseText);
            }
        });
    });
</script>