@model IEnumerable<StationeryStoreSystem.Models.Order>

    @{
        ViewBag.Title = "Index";
    }
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
<div>
    <div class="container">
        <div class="row"><h4>DownLoad Report</h4></div>
        <div class="row mb-3">
            <div class="col-2 text-right">
               <i class='fas fa-file' style='font-size:24px'></i>
            </div>
            <div class="col-4 text-left">
                <h5><a href="@Url.Action("ExportOrders")"> Download_PDF </a></h5>
            </div>
            <div class="col-2 text-right">
                <i class="fa fa-pie-chart" style="font-size:24px"></i>
            </div>
            <div class="col-4 text-left">
                <h5><a href="@Url.Action("ExportChart")"> Download Chart </a></h5>
            </div>
        </div>
        <div class="row"><h4>View Report</h4></div>
        <div class="row mb-3">
            <div class="col-2 text-right"></div>
            <div class="col-4 text-left">
                <button class="btn btn-primary" onclick="myBar()">View bar chart</button>
            </div>
            <div class="col-2 text-right"></div>
            <div class="col-4">
                <button class="btn btn-primary" onclick="myPie()">View pie chart</button>
            </div>
        </div>
        <div id="chartContainer"></div>
    </div>





<script type="text/javascript">
    function myBar() {
    		var chart = new CanvasJS.Chart("chartContainer", {
    			theme: "light1",
    			animationEnabled: true,
    			title: {
    				text: "Statistic Report"
    			},
    			subtitles: [
    				{ text: "-by Happy Stationery Store" }
    			],
    			axisY: {
    			    title: "Quantity",
    			    titleFontSize: 24
    			},
    			data: [
    			{
    			    type: "column", //change type to bar, line, area, pie, etc

					dataPoints: @Html.Raw(ViewBag.DataPoints),
    			}
    			]
    		});
    		chart.render();
    };

    function myPie() {
        var chart = new CanvasJS.Chart("chartContainer", {
            theme: "light2",
            animationEnabled: true,
            title: {
                text: "Statistic Report"
            },
            subtitles: [
                { text: "-by Happy Stationery Store" }
            ],
            axisY: {
                title: "Quantity",
                titleFontSize: 24
            },
            data: [
            {
                type: "pie", //change type to bar, line, area, pie, etc
                startAngle: 240,
                yValueFormatString: "##0.00\"%\"",
                indexLabel: "{label} {y}",
                dataPoints: @Html.Raw(ViewBag.DataPoints),
            }
            ]
        });
        chart.render();
    };
</script>
</div>



